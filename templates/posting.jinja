{% extends "__base.jinja" %}
{% block body %}
    <div class='row mb-3'>
        <div class='col-12 mb-3'>
            <h1 class='font-weight-bold'>{{posting.name}}</h1>
            <div class='row'>
                <div class='col-5'>
                    <p>Bætt við þann: </p>
                </div>
                <div class='col-7 text-right'>
                    <p>{{posting.created_at | datetime(format='low')}}</p>
                </div>
            </div>
            <p class='mb-0'>
                <span class='font-weight-bold'>Texti: </span>
                {{posting.ad_text}}
            </p>
        </div>
    </div>
    <div class='row mb-3'>
        <div class='col-12'>
            {% if current_user.is_admin() %}
                <button class='btn btn-secondary text-danger float-right' data-toggle='modal', data-target='#deletePostingModal'>
                    {{macros.btn_icon('trash', 'r')}} Eyða
                </button>
                <a class='btn btn-secondary text-warning float-right mr-2' href='{{url_for('edit_posting', id=posting.id)}}'>
                    {{macros.btn_icon('edit', 'r')}} Breyta
                </a>
            {% endif %}
            <a class='btn btn-secondary float-right mr-2' href='{{posting.get_apply_url()}}'>
                Hlekkur á umsókn
            </a>
        </div>
    </div>
    <div class='row'>
        <div class='col-12'>
            <h3 class='font-weight-bold'>Umsóknir</h3>
        </div>
        <div class='col-12'>
            {% if posting.applications %}
                {% with applications=posting.applications %}
                    {% include 'tables/applications.jinja'%}
                {% endwith %}
            {% else %}
                {{macros.no_results("Engar Umsóknir",
                    "Engar umsóknir fundust fyrir þessa auglýsingu.",
                    icon="question-circle", type="secondary")}}
            {% endif %}
        </div>
    </div>
{% endblock %}
{% block modals %}
    {% include 'modals/delete_posting.jinja' %}
{% endblock %}
{% block scripts %}
    {{super()}}
{% endblock %}