{% extends "__base.jinja" %}
{% block body %}
    <div class='row'>
        <div class='col-12'>
            <h1 class='font-weight-bold'>Þínar Safnanir</h1>
        </div>
    </div>
    <div class='row mb-3'>
        {% if current_user.assigned_collections %}
            {% for collection in current_user.assigned_collections[:4] %}
                <div class='col-xl-3 col-lg-4 col-md-6 col-12 d-flex align-items-stretch'>
                    {% include '_collection_card.jinja' %}
                </div>
            {% endfor %}
        {% endif %}
        {% if current_user.assigned_collections|length < 4 %}
            <div class='col-xl-3 col-lg-4 col-md-6 col-12 d-flex align-items-stretch mb-3'>
                <div class='card card-body'>
                    <p class='font-weight-bold card-text'>Bættu við fleiri</p>
                    <p class='card-text'>Búðu til nýja söfnun hér og skráðu þig sem rödd.</p>
                    <a href="{{url_for('create_collection')}}" class='btn btn-success float-right align-self-baseline'>
                        Búa til
                        {{macros.btn_icon('plus', 'r')}}
                    </a>
                </div>
            </div>
        {% endif %}
    </div>

    <div class='row'>
        <div class='col-12'>
            <h1 class='font-weight-bold'>Nýjar lotur</h1>
        </div>
    </div>
    <div class='row'>
        {% for session in sessions %}
            <div class='col-xl-3 col-lg-4 col-md-6 col-12 d-flex align-items-stretch'>
                {% include '_session_card.jinja' %}
            </div>
        {% endfor %}
    </div>
{% endblock %}