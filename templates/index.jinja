{% extends "__base.jinja" %}
{% block body %}
    <div class='row'>
        <div class='col-12'>
            <h1 class='font-weight-bold'>Þínar Safnanir</h1>
        </div>
    </div>
    <div class='row mb-3'>
        {% if current_user.assigned_collections %}
            {% for collection in current_user.assigned_collections %}
                <div class='col-xl-3 col-lg-4 col-md-6 col-12 d-flex align-items-stretch'>
                    {% include '_collection_card.jinja' %}
                </div>
            {% endfor %}
        {% else %}
            <div class='col-xl-3 col-lg-4 col-md-6 col-12 d-flex align-items-stretch'>
                <div class='card card-body'>
                    <p class='font-weight-bold card-text'>Engin söfnun skráð</p>
                    <p class='card-text'>Búðu til nýja söfnun hér og skráðu þig sem rödd.</p>
                    <a href="{{url_for('create_collection')}}" class='btn btn-success  float-right'>
                        Búa til
                        {{macros.btn_icon('plus', 'r')}}
                    </a>
                </div>
            </div>
        {% endif %}
    </div>

    <div class='row'>
        <div class='col-12'>
            <h1 class='font-weight-bold'>Nýjar Safnanir</h1>
        </div>
    </div>
    <div class='row'>
        {% for collection in collections %}
            <div class='col-xl-3 col-lg-4 col-md-6 col-12 d-flex align-items-stretch'>
                {% include '_collection_card.jinja' %}
            </div>
        {% endfor %}
    </div>
{% endblock %}