{% extends "lists/_list.jinja" %}
{% block title %}Safnanir{% endblock %}
{% block total %}{{collections.total}}{% endblock %}
{% block buttons %}
    {% if current_user.is_admin() %}
         <a href='{{url_for("user_create")}}' class='btn btn-success float-right dropdown-toggle' data-toggle='dropdown''>
            Bæta við
        </a>
        <div class='dropdown-menu'>
            <a href='{{url_for("create_collection")}}' class='dropdown-item'>
                {{macros.btn_icon('plus', 'r')}}
                Búa til
            </a>
            <a class='dropdown-item' type="button" data-toggle='modal', data-target='#uploadMOSModal'>
                {{macros.btn_icon('upload', 'r')}}
                Hlaða upp talgervingum
            </a>
        </div>
        <a class='btn btn-secondary float-right mr-2' href='{{url_for("collection_zip_list")}}'>
            {{macros.btn_icon('archive', 'r')}}
            Skjalasöfn
        </a>
    {% endif %}
{% endblock %}
{% block table %}
    {% if collections.total > 0 %}
        {% with collections=collections.items %}
            {% include 'tables/collections.jinja'%}
        {% endwith %}
    {% endif %}
{% endblock %}

{% block pagination %}
    {% if collections.total > 0 %}
        {{macros.pagination(collections, url_for('collection_list'))}}
    {% endif %}
{% endblock %}

{% block no_results %}
    {% if collections.total == 0 %}
        {{macros.no_results("Engar safnanir",
            "Til að byrja að safna gögnum þarf að búa til söfnun fyrst.",
            url_for('create_collection'),
            "Búa til")}}
    {% endif %}
{% endblock %}

{% block modals %}
<div class="modal fade" id='uploadMOSModal' tabindex="-1">
        <form method='POST' enctype="multipart/form-data">
            <div class="modal-dialog">
                <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Hlaða upp söfnun</h5>
                    <button type="button" class="close" data-dismiss="modal">
                    <span>&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <p>
                        Athugaðu að hlaða þarf upp .zip skrá sem inniheldur möppu sem heitir "audio", möppu sem heitir "text" og 
                        skrá sem heitir index.tsv.
                        Audio mappan inniheldur allar uppt-lur og index.tsv tengir auðkenni hverrar MOS-setningar við nafn
                        talgervingarinnar í audio möppunni.
                    </p>
                    {% with form=form %}
                        {% include 'forms/_form.jinja' %}
                    {% endwith %}
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Loka</button>
                    <button class='btn btn-primary' type='submit'>
                        Klára
                        <span class='ml-1'><i class='fa fa-check'></i></span>
                    </button>
                </div>
                </div>
            </div>
        </form>
    </div>
{% endblock %}