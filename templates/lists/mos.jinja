{% extends "lists/_list.jinja" %}
{% block title %}MOS prufur{% endblock %}
{% block total %}{{mos_list.total}}{% endblock %}
{% block table %}
    {% if mos_list.total > 0 %}
        {% with mos_list=mos_list.items %}
            {% include 'tables/mos.jinja'%}
        {% endwith %}
    {% endif %}
{% endblock %}

{% block pagination %}
    {% if mos_list.total > 0 %}
        {{macros.pagination(mos_list, url_for('mos_list'))}}
    {% endif %}
{% endblock %}

{% block no_results %}
    {% if mos_list.total == 0 %}
        {{macros.no_results("Engar MOS prufur",
            "Til að sjá MOS prufur þarf fyrst að búa þær til.",
            url_for('mos_create'), "Búa til MOS prufu")}}
    {% endif %}
{% endblock %}