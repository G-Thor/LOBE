{% extends "__base.jinja" %}
{% block body %}
        <div class='row'>
            <div class='col-12'>
                <h1 class='font-weight-bold'>Safnanir</h1>
            </div>
            <div class='col-12 mb-3'>
                {% if current_user.is_admin() %}
                    <a class='btn btn-secondary text-success float-right' href='{{url_for("create_collection")}}'>
                        {{macros.btn_icon('plus', 'r')}}
                        Búa til
                    </a>
                    <a class='btn btn-secondary float-right mr-2' href='{{url_for("collection_zip_list")}}'>
                        {{macros.btn_icon('archive', 'r')}}
                        Skjalasöfn
                    </a>
                {% endif %}
            </div>
        </div>
        <div class='row'>
            <div class='col-12 table-responsive'>
                <table class='table'>
                    <thead>
                        <th>
                            Nafn
                            {{macros.sort_th_a('name')}}
                        </th>
                        <th>
                            Búin til
                            {{macros.sort_th_a('created_at')}}
                        </th>
                        <th>
                            Fjöldi setninga
                            {{macros.sort_th_a('num_tokens')}}
                        </th>
                        <th class='text-right'>
                            Tegund
                            {{macros.sort_th_a('has_video')}}
                        </th>
                        <th>
                            Gangur
                        </th>
                    </thead>
                    <tbody>
                        {% for collection in collections.items %}
                            <tr>
                                <td><a href={{collection.get_url()}}>{{collection.name}}</a></td>
                                <td>{{collection.created_at | datetime('low')}}</td>
                                <td>{{collection.num_tokens}}</td>
                                <td class='text-right'>
                                    {% if collection.has_video %}
                                        <span class='text-success'><i class='fa fa-video'></i></span>
                                    {% else%}
                                        <span class='text-success'><i class='fa fa-microphone'></i></span>
                                    {% endif %}
                                </td>
                                <td>
                                    <div class="progress">
                                        <div class="progress-bar bg-success" role="progressbar" style="width:{{collection.get_complete_ratio(as_percent=True)}}%"></div>
                                        <div class="progress-bar bg-warning" role="progressbar" style="width:{{collection.get_invalid_ratio(as_percent=True)}}%"></div>
                                    </div>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
{% endblock %}