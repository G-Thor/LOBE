{% extends "lists/_list.jinja" %}
{% block title %}{{mos.printable_id}}{% endblock %}
{% block total %}{{mos_list|length}}{% endblock %}

{% block header_content %}
    <div class="float-left text-warning">
        {% if not mos.number_selected > 0%}
            <span>Veldu setningar til að nota í prófinu</span>
        {% endif %}
    </div>
{% endblock %}

{%block buttons %}
    {% if current_user.is_admin() %}
        <a href='{{url_for("stream_MOS_zip", id=mos.id)}}' class='float-right btn btn-primary'>
            {{macros.btn_icon('download', 'r')}}
            Sækja
        </a>
        <button class="btn btn-secondary btn-sm float-right mr-2" type="button" data-toggle='modal', data-target='#uploadMOSModal'>
            {{macros.btn_icon('upload', 'r')}}
            Hlaða upp talgerfingum
        </button>
        <a class='btn btn-secondary btn-sm text-success float-right mr-2' href='{{url_for("mos_edit", id=mos.id)}}'>
            {{macros.btn_icon('plus', 'r')}}
            Breyta
        </a>
        {% if mos.number_selected > 0%}
        <a class='btn btn-secondary btn-sm text-success float-right mr-2' href='{{url_for("mos_test", id=mos.id)}}'>
            {{macros.btn_icon('play', 'r')}}
            Hefja MOS próf
        </a>
        {% else %}
        <a class='btn btn-secondary btn-sm text-warning float-right mr-2'>
            {{macros.btn_icon('play', 'r')}}
            Ekki tilbuid
        </a>
        {% endif %}
        
    {% endif %}
{% endblock %}

{% block table %}
    {% with mos_list=mos_list %}
        {% include 'tables/mos.jinja'%}
    {% endwith %}
{% endblock %}

{% block no_results %}
    {% if mos_list.total == 0 %}
        {{macros.no_results("Engar setningar í mos prufu",
            "Til að sjá setningar þarf fyrst að bæta þeim við.",
            url_for('mos'), "Bæta við setningum")}}
    {% endif %}
{% endblock %}

{% block modals %}
    <div class="modal fade" id='uploadMOSModal' tabindex="-1">
        <form method='POST' enctype="multipart/form-data">
            <div class="modal-dialog">
                <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Hlaða upp talgerfingum fyrir MOS próf</h5>
                    <button type="button" class="close" data-dismiss="modal">
                    <span>&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <p>
                        Athugaðu að hlaða þarf upp .zip skrá sem inniheldur möppu sem heitir "audio" og skrá sem heitir index.tsv.
                        Audio mappan inniheldur allar talgerfingarnar og index.tsv tengir auðkenni hverrar MOS-setningar við nafn
                        talgerfingarinnar í audio möppunni.
                    </p>
                    {% with form=mos_form %}
                        {% include 'forms/_form.jinja' %}
                    {% endwith %}
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Loka</button>
                    <button class='btn btn-primary' type='submit'>
                        Klára
                        <span class='ml-1'><i class='fa fa-check'></i></span>
                    </button>
                </div>
                </div>
            </div>
        </form>
    </div>
{% endblock %}

{% block scripts %}
    {{super()}}
    <script>

        $(".mos-check-button").on('change', function(){
            var id = this.name.split('mos-')[1];
            console.log(id)
            updateMOS(this)
        });


        function updateMOS(form) {
            var xhr = new XMLHttpRequest();
            xhr.onload = function(e) {
                if(this.readyState === XMLHttpRequest.DONE) {
                    if(xhr.status == '200'){
                        var response = JSON.parse(xhr.responseText);
                        //console.log(response);
                    } else{
                        promptError("Villa koma upp:", xhr.responseText, "");
                    }
                }
            }
            let formData = new FormData(form);
            xhr.open("POST", form.action, true);
            xhr.send(formData);
        }
    </script>
{% endblock %}