{% extends "__base.jinja" %}
{% block body %}
    <div class='row'>
        <div class='col-12'>
            <h1 class='font-weight-bold'>{{mos.printable_id}}
            </h1>
        </div>
        <div class='col-md-6 col-12'>
            <div class='row'>
                <div class='col-7'>
                    <p>Stofnuð þann:</p>
                </div>
                <div class='col-5 text-right'>
                    <p>{{mos.created_at | datetime(format='low')}}</p>
                </div>
            </div>
            <div class='row'>
                <div class='col-7'>
                    <p>Fjöldi setninga:</p>
                </div>
                <div class='col-5 text-right'>
                    <p>{{mos.num_samples}}</p>
                </div>
            </div>
        </div>
        <div class='col-12'>
            <a href='{{mos.edit_url}}' class='btn btn-sm text-warning btn-secondary float-right'>
                {{macros.btn_icon('edit', 'r')}}
                Breyta
            </a>
        </div>
    </div>
{% endblock %}

{% block table %}
    {% if mos_list.total > 0 %}
        {% with mos_list=mos_list.items %}
            {% include 'tables/mos_all.jinja'%}
        {% endwith %}
    {% endif %}
{% endblock %}

{% block pagination %}
    {% if mos_list.total > 0 %}
        {{macros.pagination(mos_list, url_for('mos_list'))}}
    {% endif %}
{% endblock %}

{% block no_results %}
    {% if mos_list.total == 0 %}
        {{macros.no_results("Engar setningar í mos prufu",
            "Til að sjá setningar þarf fyrst að bæta þeim við.",
            url_for('mos'), "Bæta við setningum")}}
    {% endif %}
{% endblock %}