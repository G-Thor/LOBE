{% extends "lists/_list.jinja" %}
{% block title %}{{mos.printable_id}}{% endblock %}
{% block total %}{{mos_list|length}}{% endblock %}

{% block header_content %}
    <div class="float-left text-warning">
        {% if not mos.number_selected > 0%}
            <span id="additional-info">Veldu setningar til að nota í prófinu</span>
        {% else %}
            <span class='d-none' id="additional-info">Veldu setningar til að nota í prófinu</span>
        {% endif %}
    </div>
{% endblock %}

{%block buttons %}
    {% if current_user.is_admin() %}
        <button class="btn btn-secondary btn-sm float-right mr-2" type="button" data-toggle='modal', data-target='#uploadMOSModal'>
            {{macros.btn_icon('upload', 'r')}}
            Hlaða upp talgervingum
        </button>
        {% if mos.number_selected > 0%}
        <a class='btn btn-secondary btn-sm text-success float-right mr-2' id='start-button' href='{{url_for("mos_test", id=mos.id)}}'>
            {{macros.btn_icon('play', 'r')}}
            Hefja MOS próf
        </a>
        {% else %}
        <a disabled class='btn btn-secondary btn-sm text-success float-right mr-2 disabled' id='start-button' href='{{url_for("mos_test", id=mos.id)}}'>
            {{macros.btn_icon('play', 'r')}}
            Hefja MOS próf
        </a>
        {% endif %}
        <a href='{{url_for("stream_MOS_zip", id=mos.id)}}' class='btn btn-primary btn-sm float-right mr-2'>
            {{macros.btn_icon('download', 'r')}}
            Sækja upptökur
        </a>
        <a class='btn btn-secondary btn-sm text-success float-right mr-2' href='{{url_for("mos_results", id=mos.id)}}'>
            {{macros.btn_icon('chart-bar', 'r')}}
            Skoða niðurstöður
        </a>
    {% endif %}
{% endblock %}

{% block table %}
    <div>
        <div>
            <h3>Talgervingar</h3>
        </div>
        
        {% with mos=mos, mos_list=synths, isSynthTable=true, selectAllForm=select_all_forms[0], deselectAllForm=select_all_forms[1] %}
            {% include 'tables/mos.jinja'%}
        {% endwith %}
    </div>

    <div class="mt-4">
        <div class="d-flex">
            <h3 class="mr-auto p-2">Upptökur</h3>
        </div>
        
        {% with mos=mos, mos_list=ground_truths, isSynthTable=false, selectAllForm=select_all_forms[2], deselectAllForm=select_all_forms[3]%}
            {% include 'tables/mos.jinja'%}
        {% endwith %}
    </div>
{% endblock %}

{% block no_results %}
    {% if mos_list.total == 0 %}
        {{macros.no_results("Engar setningar í mos prufu",
            "Til að sjá setningar þarf fyrst að bæta þeim við.",
            url_for('mos'), "Bæta við setningum")}}
    {% endif %}
{% endblock %}

{% block modals %}
    <div class="modal fade" id='uploadMOSModal' tabindex="-1">
        <form method='POST' enctype="multipart/form-data">
            <div class="modal-dialog">
                <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Hlaða upp talgervingum fyrir MOS próf</h5>
                    <button type="button" class="close" data-dismiss="modal">
                    <span>&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <p>
                        Athugaðu að hlaða þarf upp .zip skrá sem inniheldur möppu sem heitir "audio" og skrá sem heitir index.tsv.
                        Audio mappan inniheldur allar talgervingarnar og index.tsv tengir auðkenni hverrar MOS-setningar við nafn
                        talgervingarinnar í audio möppunni.
                    </p>
                    {% with form=mos_form %}
                        {% include 'forms/_form.jinja' %}
                    {% endwith %}
                </div>
                <div class="modal-footer">
                    <a href='{{url_for("stream_MOS_index_demo")}}' class='btn btn-primary btn-sm float-left mr-2'>
                        {{macros.btn_icon('download', 'r')}}
                        Sækja sýnidæmi(index_demo.tsv)
                    </a>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Loka</button>
                    <button class='btn btn-primary' type='submit'>
                        Klára
                        <span class='ml-1'><i class='fa fa-check'></i></span>
                    </button>
                    
                </div>
                </div>
            </div>
        </form>
    </div>

     <div class="modal fade" id='deleteModal' tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Þú ert við það að eyða línu!</h5>
                <button type="button" class="close" data-dismiss="modal">
                <span>&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>
                    Með því að eyða þessari lotu fremur þú alheimssglæp.
                </p>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Loka</button>
                <a id='confirmationButton' href='{{url_for("delete_mos_instance", id=1)}}' class='btn btn-danger'>
                    Eyða
                    {{macros.btn_icon('trash', 'l')}}
                </a>
            </div>
            </div>
        </div>
    </div>

{% endblock %}

{% block scripts %}
    {{super()}}
    <script>
        function deletebutton(id){
            $('#deleteModal #confirmationButton').attr('href', '{{url_for("delete_mos_instance", id=1)}}'.replace("1", id));
        }


        $(".mos-check-button").on('change', function(){
            var id = this.name.split('mos-')[1];
            updateUI()
            updateMOS(this)
        });


        function updateUI(){
            var elements = document.getElementsByClassName("mos-check-button");
            var ids = []
            var none_checked = true;
            for (var i = 0, len = elements.length; i < len; i++) {
                var array = $( elements[i] ).serializeArray()
                if (!(array === undefined || array.length == 0)) {
                    none_checked = false;
                }
            }
            if(none_checked){
                $("#start-button").addClass( "disabled" );
                $("#additional-info").removeClass( "d-none" );
            }
            else{
                $("#start-button").removeClass( "disabled" );
                $("#additional-info").addClass( "d-none" );
            }
        }

        function updateMOS(form) {
            //console.log(form)
            var xhr = new XMLHttpRequest();
            xhr.onload = function(e) {
                if(this.readyState === XMLHttpRequest.DONE) {
                    if(xhr.status == '200'){
                        var response = JSON.parse(xhr.responseText);
                        //console.log(response);
                    } else{
                        promptError("Villa koma upp:", xhr.responseText, "");
                    }
                }
            }
            let formData = new FormData(form);


            xhr.open("POST", form.action, true);
            xhr.send(formData);
        }
    
        $('#files').on('change',function(){
            //get the file name
            var fileName = $(this).val();
            //replace the "Choose a file" label
            $(this).next('.custom-file-label').html(fileName);
        });
    </script>
{% endblock %}