{% extends "__base.jinja" %}
{% block body %}
    <div class='row'>
        <div class='col-12'>
            <h1 class='font-weight-bold'>Upptaka</h1>
            <p>Tekið upp: {{recording.created_at | datetime(format='medium')}}</p>
            <p>Lesið af: {{recording.user | default("ekki skráð", true)}} </p>
        </div>
    </div>
    <div class='row'>
        <div class='col-12'>
            <a href={{recording.get_download_url()}} class='btn btn-secondary float-right ml-2'>
                <i class='fa fa-download'></i>
            </a>
            <div class='float-right'>
            <audio controls>
                <source src={{recording.get_download_url()}} type="audio/wav">
                Your browser does not support the audio element.
            </audio>

            </div>
        </div>
    </div>
{% endblock %}